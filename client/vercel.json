{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "index.html" }],
  "build": {
    "env": {
      "VITE_API_URL": "https://sipm-admin.vercel.app/api/v1"
    }
  }
}
